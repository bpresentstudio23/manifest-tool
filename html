        let level = score <= 2 ? "low" : score === 3 ? "mid" : "high";
        let msg = score <= 2 ? "âš ï¸ å¡é»æ˜é¡¯" : score === 3 ? "ğŸ”¶ éœ€è¦æ›´å¤šç·´ç¿’" : "âœ… ç‹€æ…‹è‰¯å¥½";
